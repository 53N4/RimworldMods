<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>*/ThingDef[defName='HiTechResearchBench']/comps/li[@Class='CompProperties_AffectedByFacilities']/linkableFacilities</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName='HiTechResearchBench']/comps/li[@Class='CompProperties_AffectedByFacilities']/linkableFacilities</xpath>
				<order>Append</order>
				<value>
					<li>LeeaniBookshelf</li>
				</value>
			</li>
		</operations>
	</Operation>

	<!-- Actually, should check if this stuff is not there, but xpatch is breaking my brain, and it would be four conditional patches, one for each level -->
	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName='SimpleResearchBench']</xpath>
		<order>Append</order>
		<value>
			<comps>
				<li Class="CompProperties_AffectedByFacilities">
					<linkableFacilities>
						<li>LeeaniBookshelf</li>
					</linkableFacilities>
				</li>
			</comps>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName='SimpleResearchBench']</xpath>
		<order>Append</order>
		<value>
			<placeWorkers>
				<li>PlaceWorker_ShowFacilitiesConnections</li>
			</placeWorkers>
		</value>
	</Operation>

	<!-- injecting apparel tags, so they would start with proper equipment -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName='Apparel_Pants' or defName='Apparel_BasicShirt' or defName='Apparel_CollarShirt' or defName='Apparel_Duster' or defName='Apparel_Jacket' or defName='Apparel_CowboyHat']/apparel/tags</xpath>
		<order>Append</order>
		<value>
			<li>LeeaniPlayer</li>
		</value>
	</Operation>

	<!-- Assigning tags to vanilla research so leeani would have some low tech from start without having access to all tribal stuff. -->
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<success>Invert</success>
				<xpath>Defs/ResearchProjectDef[defName='Greatbows']/tags</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>Defs/ResearchProjectDef[defName='Greatbows']</xpath>
				<order>Append</order>
				<value>
					<tags />
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<!-- Some of those are actually part of classic start and therefor unlocked anyway. Added here just in case they would be changed to start without classic start stuff to better fit medieval tech level. -->
		<xpath>Defs/ResearchProjectDef[defName='RecurveBow' or defName='Pemmican' or defName='PassiveCooler' or defName='Bedrolls' or defName='Beds' or defName='Stonecutting' or defName='ComplexClothing' or defName='Greatbows']/tags</xpath>
		<order>Append</order>
		<value>
			<li>LeeaniStart</li>
		</value>
	</Operation>
	
	<!-- Outlander union have a small chance to have a stray Leeani on their side. Piracy is not their style, so not adding them to pirate bands. -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName='Outlander']/pawnGroupMakers/li[kindDef="Normal"]/options</xpath>
		<order>Append</order>
		<value>
			<LeeaniTradie>3</LeeaniTradie>
			<LeeaniSoldier>2</LeeaniSoldier>
			<LeeaniScout>1</LeeaniScout>
			<LeeaniMercenary>5</LeeaniMercenary>
			<LeeaniCaptain>1</LeeaniCaptain>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName='Outlander']/pawnGroupMakers/li[kindDef="Trader"]/guards</xpath>
		<order>Append</order>
		<value>
			<LeeaniMercenary>5</LeeaniMercenary>
			<LeeaniSoldier>2</LeeaniSoldier>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName='Outlander']/pawnGroupMakers/li[kindDef="FactionBase"]/options</xpath>
		<order>Append</order>
		<value>
			<LeeaniTradie>3</LeeaniTradie>
			<LeeaniSoldier>2</LeeaniSoldier>
			<LeeaniScout>2</LeeaniScout>
			<LeeaniMercenary>5</LeeaniMercenary>
			<LeeaniCaptain>1</LeeaniCaptain>
		</value>
	</Operation>

</Patch>