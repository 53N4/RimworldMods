<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>*/ThingDef[defName='HiTechResearchBench']/comps/li[@Class='CompProperties_AffectedByFacilities']/linkableFacilities</xpath>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName='HiTechResearchBench']/comps/li[@Class='CompProperties_AffectedByFacilities']/linkableFacilities</xpath>
				<order>Append</order>
				<value>
					<li>LeeaniBookshelf</li>
				</value>
			</li>
		</operations>
	</Operation>

	<!-- Actually, should check if this stuff is not there, but xpatch is breaking my brain, and it would be four conditional patches, one for each level -->
	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName='SimpleResearchBench']</xpath>
		<order>Append</order>
		<value>
			<comps>
				<li Class="CompProperties_AffectedByFacilities">
					<linkableFacilities>
						<li>LeeaniBookshelf</li>
					</linkableFacilities>
				</li>
			</comps>
		</value>
	</Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName='SimpleResearchBench']</xpath>
		<order>Append</order>
		<value>
			<placeWorkers>
				<li>PlaceWorker_ShowFacilitiesConnections</li>
			</placeWorkers>
		</value>
	</Operation>

	<!-- injecting apparel tags, so they would start with proper equipment -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName='Apparel_Pants' or defName='Apparel_BasicShirt' or defName='Apparel_CollarShirt' or defName='Apparel_Duster' or defName='Apparel_Jacket' or defName='Apparel_CowboyHat' or defName='Apparel_BowlerHat']/apparel/tags</xpath>
		<order>Append</order>
		<value>
			<li>LeeaniPlayer</li>
		</value>
	</Operation>
	
	<!-- Outlander union have a small chance to have a stray Leeani merc on their side -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName='Outlander']/pawnGroupMakers/li[kindDef="Normal"]/options</xpath>
		<order>Append</order>
		<value>
			<LeeaniMercenary>5</LeeaniMercenary>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName='Outlander']/pawnGroupMakers/li[kindDef="Trader"]/guards</xpath>
		<order>Append</order>
		<value>
			<LeeaniMercenary>5</LeeaniMercenary>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/FactionDef[defName='Outlander']/pawnGroupMakers/li[kindDef="FactionBase"]/options</xpath>
		<order>Append</order>
		<value>
			<LeeaniMercenary>5</LeeaniMercenary>
		</value>
	</Operation>

</Patch>