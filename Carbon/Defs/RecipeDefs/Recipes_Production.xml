<RecipeDefs>

	<RecipeDef>
		<!-- Oil and gas are 85% carbon -->
		<defName>MakeCarbonFromChemfuel</defName>
		<label>make carbon from chemfuel</label>
		<description>Make a batch of refined carbon by refining chemfuel.</description>
		<jobString>Making carbon from chemfuel.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>3000</workAmount>
		<workSkill>Intellectual</workSkill>
		<researchPrerequisite>Refining</researchPrerequisite>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Chemfuel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Carbon>42</Carbon>
		</products>
	</RecipeDef>

