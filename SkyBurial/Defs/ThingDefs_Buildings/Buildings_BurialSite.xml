<?xml version="1.0" encoding="utf-8"?>

<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>SkyBurialSite</defName>
		<label>sky burial site</label>
		<thingClass>Building_Storage</thingClass>
		<graphicData>
			<texPath>Things/Building/Furniture/SkyByurialSite</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>0.35</fillPercent>
		<!-- technically, it is an elevated platform, so you can just pass under -->
		<pathCost>0</pathCost>
		<blockWind>false</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
		<designationCategory>Misc</designationCategory>
		<rotatable>false</rotatable>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>8</Mass>
			<WorkToBuild>320</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<description>You can leave bodies there, so nature would be able to reclaim them.</description>
		<size>(1,1)</size>
		<building>
			<preventDeteriorationOnTop>false</preventDeteriorationOnTop>
			<preventDeteriorationInside>false</preventDeteriorationInside>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<isInert>true</isInert>
			<fixedStorageSettings>
				<priority>Important</priority>
				<filter>
					<categories>
						<li>Corpses</li>
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<filter>
					<categories>
						<li>CorpsesHumanlike</li>
					</categories>
				</filter>
			</defaultStorageSettings>
		</building>
		<inspectorTabs>
			<li>ITab_Storage</li>
		</inspectorTabs>
		<placeWorkers>
			<li>PlaceWorker_NotUnderRoof</li>
		</placeWorkers>
		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<minifiedDef>MinifiedFurniture</minifiedDef>
		<canOverlapZones>false</canOverlapZones>
	</ThingDef>

</Defs>